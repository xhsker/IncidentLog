<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Incident Log</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>

    <nav class="navbar navbar-expand-lg navbar navbar-light bg-dark navbar-fixed-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggler" data-target=".navbar-collapse" data-toggle="collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="navbar nav-tabs">
                    @Html.ActionLink("Current Incidents", "Index", "Incident")
                </li>
                <li class="navbar nav-tabs">
                    @Html.ActionLink("Enter New Incident", "Create", "Incident")
                </li>
                <li class="navbar nav-tabs">
                    @Html.ActionLink("Contact", "Contact", "Home")
                </li>
            </ul>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="nav nav-tabs">
                    @Html.ActionLink("Login/Register", "Login", "Account", new { area = "" }, new { @class = "navbar-nav" })
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Created by Thomas Lake</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
